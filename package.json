{
	"name": "tmc-vscode",
	"displayName": "tmc-vscode",
	"description": "TestMyCode extension for Visual Studio Code",
	"version": "0.0.1",
	"license": "MIT",
	"publisher": "tmc-vscode-temporary",
	"repository": "https://github.com/rage/tmc-vscode",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:tmcView",
		"onCommand:runTests",
		"onCommand:uploadArchive"
	],
	"main": "./dist/extension",
	"contributes": {
		"commands": [
			{
				"command": "tmcView.activateEntry",
				"title": "Activate"
			},
			{
				"command": "uploadArchive",
				"title": "TMC - Submit solution"
			},
			{
				"command": "runTests",
				"title": "TMC - Run tests"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "tmcView.activateEntry",
					"when": "false"
				}
			],
			"editor/title": [
				{
					"command": "runTests",
					"group": "navigation",
					"when": "resourceScheme == file"
				},
				{
					"command": "uploadArchive",
					"group": "navigation",
					"when": "resourceScheme == file"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"title": "TestMyCode",
					"id": "tmc",
					"icon": "media/TMC.svg"
				}
			]
		},
		"views": {
			"tmc": [
				{
					"id": "tmcView",
					"name": "Menu"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"compile": "ttsc -p ./",
		"watch": "ttsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"tslint": "tslint --project .",
		"postinstall": "babel node_modules/ts-results --out-dir node_modules/ts-results --plugins=@babel/plugin-transform-modules-commonjs",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch --info-verbosity verbose"
	},
	"devDependencies": {
		"@babel/cli": "^7.8.3",
		"@babel/core": "^7.8.3",
		"@babel/plugin-transform-modules-commonjs": "^7.8.3",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/node-fetch": "^2.5.4",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"ts-loader": "^6.2.1",
		"tslint": "^5.20.0",
		"ttypescript": "^1.5.10",
		"typemoq": "^2.1.0",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.2",
		"webpack": "^4.41.6",
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {
		"client-oauth2": "^4.2.5",
		"form-data": "^3.0.0",
		"handlebars": "^4.7.2",
		"node-fetch": "^2.6.0",
		"ts-results": "^2.0.1",
		"typescript-is": "^0.13.1"
	}
}
