// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "webpackBuild",
            "type": "npm",
            "script": "webpack:watch",
            "options": {
                "env": {
                    "NODE_ENV": "${input:nodeEnv}",
                    "BACKEND": "${input:zBackend}"
                }
            },
            "promptOnClose": false,
            "problemMatcher": {
                "base": "$tsc-watch",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^     \\[webpack-cli\\] Compilation starting\\.\\.\\.",
                    "endsPattern": "^    \\[webpack-cli\\] Compiler is watching files for updates\\.\\.\\."
                }
            },
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "runOptions": {
                "instanceLimit": 1
            }
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "nodeEnv",
            "description": "Define node environment",
            "options": ["development", "production"],
            "default": "development"
        },
        {
            "type": "pickString",
            "id": "zBackend",
            "description": "Select backend mode",
            "options": ["mockBackend", "localTMCServer", "production"],
            "default": "production"
        }
    ]
}
